<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IrrigationController.ZonaEdit"
             Title="Zóna szerkesztés"
             BackgroundColor="#eeeeee">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ToolbarItem_Save.png"
                     Clicked="SaveClicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout Margin="15,15,15,15" BackgroundColor="White">
        <Image Margin="0,0,0,20"  Source="image_bokor.jpg"/>
        <Label Margin="20,0,0,0"  Text ="Név" FontSize="20"/>
        <Entry Margin="17,0,17,0" Text="{Binding Nev}" x:Name="txtZonaNev" Keyboard="Text" FontSize="25"/>
    </StackLayout>
</ContentPage>