<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           
             
             
             x:Class="IrrigationController.ZonaData"
             Title="Zóna adatai"
             BackgroundColor="#eeeeee">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ToolbarItem_Edit.png"
                     Clicked="EditClicked"/>
        <ToolbarItem IconImageSource="ToolbarItem_Delete.png"
                     Clicked="DeleteClicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout Margin="15,15,15,15" BackgroundColor="White">
        <Image Margin="0,0,0,20" Source="image_bokor.jpg"/>
        <Label Margin="15,0,0,0"  Text ="Név" FontSize="20"/>
        <Frame Margin="15,0,15,0" BorderColor="Gray" HasShadow="False" Padding="12">
            <Label  Text ="{Binding Nev}" FontSize="20" TextColor="Black"/>
        </Frame>
    </StackLayout>
</ContentPage>