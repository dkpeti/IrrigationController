<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IrrigationController.EditZona"
             Title="Zóna szerkesztés">
    <StackLayout>
        <TableView Intent="Settings" BackgroundColor="White">
            <TableRoot>
                <TableSection >
                    <EntryCell x:Name="txtZonaNev" Label="Név" Text ="{Binding Nev}" Keyboard="Text" />
                    <ViewCell>
                        <Button Text="Mentés" Clicked="OnSaveClicked" />
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>