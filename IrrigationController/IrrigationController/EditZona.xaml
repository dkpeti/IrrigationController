<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IrrigationController.EditZona"
             Title="Zóna szerkesztés">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ToolbarItem_SaveZona.png"
                     Clicked="OnSaveClicked"/>
        <ToolbarItem Text="Mentés"
                     Clicked="OnSaveClicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout Margin="15,15,15,15" BackgroundColor="#eeeeee">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image  Source="image_bokrok.jpg" Grid.RowSpan="4"  Grid.ColumnSpan="5"  Aspect="AspectFill"/>
            <Label  Margin="20,0,0,0"         Grid.Row="5"      Grid.Column="0"      FontSize="30" Text="Név"/>
            <Entry  Margin="10,0,20,0"        Grid.Row="5"      Grid.Column="1"      Grid.ColumnSpan="4" Text="{Binding Nev}" x:Name="txtZonaNev" Keyboard="Text" />
            <Button Margin="20,0,20,0"        Grid.Row="7"      Grid.ColumnSpan="5" Text="Kép választása" x:Name="KepValasztas"/>
            <Button Margin="20,0,20,0"        Grid.Row="8"      Grid.ColumnSpan="5" Text="Kép készítése" x:Name="KepKeszites"/>
        </Grid>
    </StackLayout>
</ContentPage>